pipeline {
    agent { label 'Worker-Node' }

    environment {
        DOCKER_IMAGE = "jrex027/webapplication"
        TAG = "v1"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/jrex027/GitHub-WebApplication2.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker Image from WebApplication2/Dockerfile...'
                sh """
                    docker build -t $DOCKER_IMAGE:$TAG -f WebApplication2/Dockerfile WebApplication2
                """
            }
        }

        stage('Login to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh """
                        echo "$PASSWORD" | docker login -u "$USERNAME" --password-stdin
                    """
                }
            }
        }

        stage('Push Image to DockerHub') {
            steps {
                echo 'Pushing Image to DockerHub...'
                sh """
                    docker push $DOCKER_IMAGE:$TAG
                """
            }
        }
    }

    post {
        success {
            echo '✅ Docker Image Built & Pushed Successfully!'
        }
        failure {
            echo '❌ Pipeline Failed!'
        }
    }
}
