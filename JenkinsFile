pipeline {
    agent { label 'Workernode-1' }

    environment {
        IMAGE_NAME = "jrex027/webapplication"
        TAG = "v1"
    }
    parameters {
        string(name: '$Reboot_Status', defaultValue: 'dev', description: 'Environment to deploy to')
    }
    stages {
        stage(name) {
            steps {
                git branch: 'main',
                    url: 'https://github.com/jrex027/GitHub-WebApplication2.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build Container Image') {
            steps {
                echo 'Building Container Image using Podman...'
                sh """
                    podman build -t ${IMAGE_NAME}:${TAG} -f WebApplication2/Dockerfile WebApplication2
                """
            }
        }

        stage('Login to DockerHub') {
            steps {
                echo 'Logging in to DockerHub via Podman...'
                withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh """
                        echo "$PASSWORD" | podman login docker.io -u "$USERNAME" --password-stdin
                    """
                }
            }
        }

        stage('Push Image to DockerHub') {
            steps {
                echo 'Pushing Image to DockerHub...'
                sh """
                    podman push ${IMAGE_NAME}:${TAG}
                """
            }
        }
    }

    post {
        success {
            echo '✅ Podman Image Built & Pushed Successfully!'
        }
        failure {
            echo '❌ Pipeline Failed!'
        }
    }
}
